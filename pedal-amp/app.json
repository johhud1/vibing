{
  "expo": {
    "name": "Pedal Amp",
    "slug": "pedal-amp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.santaclaude.pedalamp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Pedal Amp needs your location to track your speed while biking and adjust volume accordingly.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Pedal Amp needs your location to track your speed while biking and adjust volume accordingly.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.santa_claude.pedalamp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Pedal Amp needs your location to track your speed while biking."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "5f8cb6ef-d47e-4c0d-877f-50ebdd221bdd"
      }
    }
  }
}